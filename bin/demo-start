#!/bin/bash

# Demo app start script.

set -e

if [ "$(id -u)" != "0" ]; then
    echo "This script must be run as root"
    exit 1
fi

echo "First time 'round the mulberry bush..."
while true; do
    sleep 600
    echo "Once more 'round the mulberry bush..."
    curl http://localhost:3000/api/airport/findAll
done

exec "$@"
